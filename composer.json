{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "essential-grid",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/essential-grid.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "js_composer",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/js_composer.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "LayerSlider",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/LayerSlider.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "revslider",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/revslider.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "templatera",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/templatera.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "Ultimate_VC_Addons",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/Ultimate_VC_Addons.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "vntd-twitter",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/vntd-twitter.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "north",
        "version": "1.0",
        "type": "wordpress-theme",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/themes/northv2.zip"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.9.8",
    "oscarotero/env": "^1.1.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "roots/wp-config": "1.0.0",
    "wpackagist-plugin/contact-form-7": "^5.0",
    "wpackagist-plugin/bootstrap-3-shortcodes": "^3.3",
    "wpackagist-plugin/learnpress": "3.0.12.1",
    "wpackagist-plugin/learnpress-course-review": "^3.0",
    "wpackagist-plugin/learnpress-import-export": "^3.0",
    "wpackagist-plugin/learnpress-fill-in-blank": "^3.0",
    "wpackagist-plugin/learnpress-prerequisites-courses": "^3.0",
    "wpackagist-plugin/quiz-master-next": "^6.0",
    "wpackagist-plugin/real-time-find-and-replace": "^3.9",
    "wpackagist-plugin/third-light-browser": "^0.1.0",
    "wpackagist-plugin/ultimate-member": "^2.0",
    "wpackagist-plugin/wordpress-importer": "^0.6.4",
    "wp-cli/wp-cli": "^2.0",
    "psy/psysh": "^0.9.9",
    "js_composer": "^1.0",
    "LayerSlider": "^1.0",
    "revslider": "^1.0",
    "templatera": "^1.0",
    "Ultimate_VC_Addons": "^1.0",
    "vntd-twitter": "^1.0",
    "wpackagist-plugin/tac": "1.5.3",
    "wpackagist-plugin/remove-jquery-migrate-safely": "1.0.0",
    "north": "^1.0",
    "wpackagist-plugin/album-and-image-gallery-plus-lightbox": "1.2.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
