{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "academy-vc",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/academy-vc.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "academy-grid",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/academy-grid.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "academy-lslider",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/academy-lslider.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "academy-rslider",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/academy-rslider.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "academy-twitter",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/academy-twitter.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "academy-vcaddons",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/unitedworldwrestling/academy/raw/master/sources/plugins/academy-vcaddons.zip"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.9.8",
    "oscarotero/env": "^1.1.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "roots/wp-config": "1.0.0",
    "wpackagist-plugin/contact-form-7": "^5.0",
    "wpackagist-plugin/grand-media": "^1.13",
    "wpackagist-plugin/bootstrap-3-shortcodes": "^3.3",
    "wpackagist-plugin/learnpress": "3.0.12.1",
    "wpackagist-plugin/learnpress-course-review": "^3.0",
    "wpackagist-plugin/learnpress-import-export": "^3.0",
    "wpackagist-plugin/learnpress-fill-in-blank": "^3.0",
    "wpackagist-plugin/learnpress-prerequisites-courses": "^3.0",
    "wpackagist-plugin/quiz-master-next": "^6.0",
    "wpackagist-plugin/real-time-find-and-replace": "^3.9",
    "wpackagist-plugin/third-light-browser": "^0.1.0",
    "wpackagist-plugin/ultimate-member": "^2.0",
    "wpackagist-plugin/wordpress-importer": "^0.6.4",
    "academy-vc": "^1.0",
    "academy-grid": "^1.0",
    "academy-lslider": "^1.0",
    "academy-rslider": "^1.0",
    "academy-twitter": "^1.0",
    "academy-vcaddons": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0.2",
    "roave/security-advisories": "dev-master"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
